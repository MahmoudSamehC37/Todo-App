<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_arrowColor="@color/black"
        app:mcv_headerTextAppearance="@style/headerTextStyle"
        app:mcv_dateTextAppearance="@style/dataTextStyle"
        app:mcv_weekDayTextAppearance="@style/weekTextStyle"
        app:mcv_calendarMode="week"
        app:mcv_selectionMode="single"
        />

    <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/tasks_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_task"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>